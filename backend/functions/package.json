{
  "name": "functions",
  "version": "1.0.0",
  "description": "Sade Chocolate Design Tool - Cloud Functions",
  "type": "module",
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "npm run build && node lib/dev-server.js",
    "dev:watch": "tsc -w & nodemon lib/dev-server.js",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "dependencies": {
    "@notionhq/client": "^2.2.14",
    "@sparticuz/chromium": "^143.0.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.5.0",
    "googleapis": "^129.0.0",
    "handlebars": "^4.7.8",
    "multer": "^2.0.2",
    "puppeteer-core": "^24.34.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.10.0",
    "@types/uuid": "^10.0.0",
    "firebase-functions-test": "^3.1.0",
    "typescript": "^5.3.3"
  }
}
